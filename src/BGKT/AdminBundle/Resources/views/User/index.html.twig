{% extends "BGKTAdminBundle::layout.html.twig" %}

{% block title %}{{ parent() }} {% endblock %}

{% block body %}
    <ul class="nav nav-pills">
        <li><a href="{{ path('admin_user_create') }}">Ajouter un nouvel utilisateur</a></li>
    </ul>
    <div class="col-md-12">
        <h3>Liste des utilisateur</h3>


        {% for user in users %}
            <p>
            <div class="col-md-8">


                Pseudonyme : {{ user.username }}</br>
                Nom : {{ user.nom }}</br>
                Pr√©nom : {{ user.prenom }}</br>
                Email : {{ user.email }}</br>
                {% for role in user.roles %}
                    Statut :   {{ role }} <br/>
                    {% if role == "ROLE_STUDENT" %}
                        Classe : {{ user.classe }}
                    {% endif %}
                {% endfor %}


            </div>
            <div class="col-md-4">
                <ul class="list-unstyled">
                    <li><a href="{{ path('admin_user_update', {'id': user.id}) }}" class="btn btn-info btn-md">Modifier
                            l'utilisateur</a></li>
                    </br>

                    <li><a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger btn-md">Supprimer
                            l'utilisateur</a></li>
                    </br>

                    <li><a href="{{ path('admin_user_updatePassword', {'id': user.id}) }}" class="btn btn-info btn-md">Modifier
                            le mot de passe</a></li>
                    </br>
                </ul>


            </div></br>
            </p>
        {% endfor %}

    </div>
{% endblock %}
