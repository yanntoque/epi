{% extends "BGKTCoreBundle::userLayout.html.twig" %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("css/userPagesStyles/userHomePage.css") }}"/>
        {{ parent() }}
    {% endblock %}
    {% block user %}
        <div class="container">
            <h3>Informations sur mon devoir :</h3>
        {% if is_granted('ROLE_STUDENT') %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-lg btn-success" value="Ajouter mon devoir"/>
            {{ form_end(form) }}
        {% endif %}
        </div>
    {% endblock %}