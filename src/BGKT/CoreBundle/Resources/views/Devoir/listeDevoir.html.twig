{% extends "BGKTCoreBundle::userLayout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/userPagesStyles/userHomePage.css") }}"/>
    {{ parent() }}
{% endblock %}
{#{% set devoirDepose = 0 %}#}
{% block user %}
    {% if is_granted('ROLE_STUDENT') %}
        <h1>Liste des dévoirs que j'ai rendu :</h1>
        {% for devoir in lstdevoir %}
            <p>
            <div class="col-md-8">
                Identifiant : {{ devoir.id }}</br>
                Dépositaire : {{ devoir.getNomDepositaire }}</br>
                Devoir rendu le : {{ devoir.getDateRendu|date('d/m/Y') }}</br>
                Commentaire : {{ devoir.getCommentaire }} <br/>
                <a href="{{ asset('uploads/devoir/'~devoir.getDocument) }}">Aperçu du devoir</a>
                <a href="{{ path('user_supprimer_devoir', {'id': devoir.id}) }}">Supprimer ce devoir</a>
                {#<a href="{{ path('user_supprimer_devoir', {'id': devoir.id}) }}">Supprimer ce devoir</a>#}
                {#<a href="{{ path('user_modifier_devoir', {'id': devoir.id}) }}">Modifier le devoir (PDF)</a>#}
            </div></br>
            </p>
        {% endfor %}
    {% endif %}
    {% if is_granted('ROLE_TEACHER') %}
        <h1>Devoirs déposés par les élèves</h1>
        {% for devoir in lstdevoir %}
            <p>
            <div class="col-md-8">
                Identifiant : {{ devoir.id }}</br>
                Dépositaire : {{ devoir.getNomDepositaire }}</br>
                Devoir rendu le : {{ devoir.getDateRendu|date('d/m/Y') }}</br>
                Commentaire : {{ devoir.getCommentaire }} <br/>
                <a href="{{ asset('uploads/devoir/'~devoir.getDocument) }}">Aperçu du devoir</a>
                <a href="{{ path('user_supprimer_devoir', {'id': devoir.id}) }}">Supprimer ce devoir</a>
                {#<a href="{{ path('user_supprimer_devoir', {'id': devoir.id}) }}">Supprimer ce devoir</a>#}
                {#<a href="{{ path('user_modifier_devoir', {'id': devoir.id}) }}">Modifier le devoir (PDF)</a>#}
            </div></br>
            </p>
        {% endfor %}
    {% endif %}
{% endblock %}